/* modernStyles.css */
body {
    background-color: #f4f4f9;
    font-family: 'Roboto', sans-serif;
    margin: 0;
    padding: 20px;
    color: #333;
}

h1 {
    text-align: center;
    color: #2c3e50;
    margin-bottom: 40px;
}

ul {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    list-style-type: none;
    padding: 0;
    justify-content: center;
}

li {
    background-color: #ffffff;
    border-radius: 10px;
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s, box-shadow 0.2s;
    width: 160px;
    text-align: center;
    overflow: hidden;
}

li:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
}

img {
    border-radius: 10px;
    width: 100%; /* Ensures the image uses all available width */
    height: auto;
}

.large-image {
    flex: 1; /* Take up more space */
    max-width: 100%; /* Allow image to scale with container */
    border-radius: 10px;
}

a {
    text-decoration: none;
    color: #34495e;
}

a:hover {
    color: #2980b9;
}

h2 {
    margin: 15px 0;
    font-size: 18px;
    color: #34495e;
}

p {
    line-height: 1.6;
}

.stone-detail-container {
    display: flex;
    align-items: flex-start;
    gap: 20px;
    margin: 20px;
    flex-wrap: wrap;
}

.stone-info {
    flex: 1; /* Take up less space compared to the image */
    max-width: 400px;
}

.stone-info h3 {
    margin-top: 0;
    font-size: 16px;
    color: #2c3e50;
}

.stone-info p {
    margin: 5px 0;
}